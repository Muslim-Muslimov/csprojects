<Window x:Class="SimpleNotes.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNotes"
        mc:Ignorable="d"
        Title="Добавление заметки" Height="326" Width="450">
    <StackPanel Margin="5">

        <TextBox x:Name="txtTitle" Margin="0 0 0 5" Padding="5" FontSize="16"/>

        <DockPanel LastChildFill = "True" >
            <RichTextBox x:Name="rtbNote" Height="200" />
        </DockPanel>

        <Button x:Name="btnNewAdd" Content="Добавить" Height="35" Width="150" 
                Click="btnNewAdd_Click" Margin="0 5 0 0"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </StackPanel>
</Window>
