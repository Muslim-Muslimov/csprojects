<Window x:Class="SimpleNotes.EditNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNotes"
        mc:Ignorable="d"
        Title="EditNote" MinHeight="345" Height="345" Width="500">

    <StackPanel Margin="5">

        <TextBox x:Name="txtTitle" Margin="5" Padding="5" FontSize="16"/>

        <DockPanel LastChildFill = "True" Margin="5">
            <RichTextBox x:Name="rtbNote" Height="200" />
        </DockPanel>

        <Button x:Name="btnSave"
                Content="Редактировать" 
                Height="35" Width="150" Margin="5" Click="btnSave_Click" 
                HorizontalAlignment="Right" />
    </StackPanel>

</Window>